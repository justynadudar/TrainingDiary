<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_technique_title"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_technique_description"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_technique_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_technique_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_technique_title" />

    <ImageView
        android:id="@+id/icon_youtube"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@string/icon_youtube"
        app:layout_constraintBottom_toBottomOf="@+id/txt_technique_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txt_technique_title"
        app:layout_constraintTop_toTopOf="@+id/txt_technique_title"
        app:layout_constraintVertical_bias="0.388"
        app:srcCompat="@drawable/ic_youtube" />

</androidx.constraintlayout.widget.ConstraintLayout>